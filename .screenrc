vbell on
startup_message off
msgwait 2
defscrollback 5000
defutf8 on
shell zsh
shelltitle "$ |term"

bind ^Z

caption always "%{= y}"
hardstatus alwayslastline '%{= B}[ %{= W}%H%{= B} ] %= %{= w}%?%-Lw%?%{B}( %{W}%n*%f%t%?(%u)%?%{B} )%{w}%?%+Lw%?%?%= %{B}[ %{= W}%c%{= B} ]'

screen -t "admin"   0 su -
screen -t "htop"    1 htop
screen -t "log"     2 tailf /var/log/messages.log
screen -t "term"    3 
